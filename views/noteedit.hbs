<form method="POST" action="/notes/save">
  <input type="hidden" name="decrate" value='<%=docreate ? "create": "update"%' />
  <p>Key: {{#if decreate}}
      <input type="text" name="notekey" value=""/>
      {{else}}
      {{#if note}} {{notekey}}{{#if}}
      <input type="hidden" name="notekey" value='{{#if note }}{{notekey}} {{/if}}'/>
      {{/if}}
  </p>
  <p>
      Title: <input type="text" name="title" value='{{#if note}} {{note.title}}{{/if}}}'/>
  </p>
  <br/> <textarea name="body" id="" cols=30 rows=10>
      {{#if note}} {{note.body}} {{/if}}
  </textarea>
  <br/><input type="submit" value="Submit"/>
</form>